# 基础配置
KERNEL_SOURCE=https://github.com/PixelExperience-Devices/kernel_xiaomi_picasso.git
KERNEL_SOURCE_BRANCH=thirteen
KERNEL_CONFIG=picasso_user_defconfig
KERNEL_IMAGE_NAME=Image.gz-dtb
ARCH=arm64
ADD_LOCALVERSION_TO_FILENAME=false

# 编译器配置优化
USE_CUSTOM_CLANG=true
CUSTOM_CLANG_SOURCE=https://github.com/kdrag0n/proton-clang.git
CUSTOM_CLANG_BRANCH=master

# 修改链接器和编译参数
EXTRA_CMDS="export LD=ld.lld && export HOSTLD=ld.lld && export DTC_EXT=/usr/bin/dtc"

# GCC配置
ENABLE_GCC_ARM64=true
ENABLE_GCC_ARM32=true
USE_CUSTOM_GCC_64=false
USE_CUSTOM_GCC_32=false

# 编译优化选项
DISABLE_CC_WERROR=true  # 改为true以避免一些警告导致编译失败
DISABLE-LTO=false
REMOVE_UNUSED_PACKAGES=true

# Ccache配置
ENABLE_CCACHE=true
CCACHE_DIR="${HOME}/.ccache"

# KernelSU配置
ENABLE_KERNELSU=false  # 根据需要修改
KERNELSU_TAG=v0.9.5
ADD_KPROBES_CONFIG=false
ADD_OVERLAYFS_CONFIG=false
APPLY_KSU_PATCH=false

# DTBO和Boot镜像配置
NEED_DTBO=false
BUILD_BOOT_IMG=false
SOURCE_BOOT_IMAGE=https://raw.githubusercontent.com/xiaoleGun/KernelSU_action/main/boot/boot.img

# AnyKernel3配置
USE_CUSTOM_ANYKERNEL3=false
